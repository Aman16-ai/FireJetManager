<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:padding="15dp"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#f1f2f4"
            android:padding="10dp"
            >
            <TextView
                android:id="@+id/title_tv_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Netflix"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="#f86b70"
                app:layout_constraintTop_toTopOf="parent"
                />
            <TextView
                android:id="@+id/password_tv_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="dhfj;a#d;l^*9@"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@+id/title_tv_pass"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />
            <ImageButton
                android:id="@+id/delete_pass_imgBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_delete_24"
                android:background="#f1f2f4"
                app:layout_constraintTop_toBottomOf="@+id/title_tv_pass"
                app:layout_constraintRight_toRightOf="parent"
                />
            <ImageButton
                android:id="@+id/copy_pass_imgBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_content_copy_24"
                android:background="#f1f2f4"
                app:layout_constraintTop_toBottomOf="@+id/title_tv_pass"
                app:layout_constraintRight_toLeftOf="@+id/delete_pass_imgBtn"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>